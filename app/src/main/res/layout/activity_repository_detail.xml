<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <ProgressBar
    android:id="@+id/progressBar"
    style="?android:attr/progressBarStyle"
    android:layout_width="72dp"
    android:layout_height="72dp"
    android:layout_gravity="center"
    android:indeterminate="true"
    android:visibility="visible" />

  <TextView
    android:id="@+id/tvError"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:alpha=".87"
    android:textColor="#000000"
    android:textSize="17sp"
    tools:text="ERROR" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".repositoryDetail.RepositoryDetailActivity">

    <TextView
      android:id="@+id/tvRepositoryName"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:alpha=".87"
      android:textColor="#000000"
      android:textSize="18sp"
      tools:text="apollo-android" />

    <TextView
      android:id="@+id/tvRepositoryDescription"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:alpha=".87"
      android:textColor="#000000"
      tools:text=':pager: A strongly-typed, caching GraphQL client for Android, written in Java"' />

    <TextView
      android:id="@+id/tvRepositoryIssues"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:alpha=".87"
      android:textColor="#000000"
      tools:text="614 Issues" />

    <TextView
      android:id="@+id/tvRepositoryPullRequests"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:alpha=".87"
      android:textColor="#000000"
      tools:text="566 Pull Requests" />

    <TextView
      android:id="@+id/tvRepositoryStars"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:alpha=".87"
      android:textColor="#000000"
      tools:text="1400 Stars" />

    <TextView
      android:id="@+id/tvRepositoryForks"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:alpha=".87"
      android:textColor="#000000"
      tools:text="240 Forks" />

    <TextView
      android:id="@+id/tvRepositoryReleases"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:alpha=".87"
      android:textColor="#000000"
      tools:text="17 Releases" />

    <Button
        android:id="@+id/buttonCommits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="#000000"
        android:text="Commits" />
  </LinearLayout>
</FrameLayout>